{
  "env": {
    "es2021": true,
    "jest": true,
    "node": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-new": "off"
  },
  "ignorePatterns": [
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "test/**/*.d.ts",
    "test/**/*.js"
  ]
}
